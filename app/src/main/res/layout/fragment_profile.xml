<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/androidIcon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/android"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="150dp"/>


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ali ErÃ§in Akkaya"
        style="@style/TextAppearance.Headline"
        app:layout_constraintTop_toBottomOf="@+id/androidIcon"
        app:layout_constraintStart_toStartOf="@+id/androidIcon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Developer @Eteration"
        style="@style/TextAppearance.SubHeadline"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toStartOf="@id/name"/>


</androidx.constraintlayout.widget.ConstraintLayout>