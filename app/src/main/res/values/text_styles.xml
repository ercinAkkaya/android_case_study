<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Başlık Stilleri -->
    <style name="TextStyle.Title" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextStyle.Subtitle" parent="TextAppearance.Material3.ActionBar.Subtitle">
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Gövde Yazı Stili -->
    <style name="TextStyle.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Buton Yazı Stili -->
    <style name="TextStyle.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
